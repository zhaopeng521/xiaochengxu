/* 下拉框 */
.select_box{
  /* background: #f7f7f7; */
  width: 40%;
  position: relative;
  z-index: 999;
  /* border: 2rpx #efefef solid; */
  /* border-radius: 10rpx */
 }
 .select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  /* border:1px solid #efefef; */
  /* border-radius: 6rpx; */
  display: flex;
  align-items: center;
  padding: 0 20rpx;
 }
 .select_text{
  font-size: 30rpx;
  flex: 1;
  text-align: center;
 }
 .select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
 }
 .select_img_rotate{
  transform:rotate(180deg); 
 }
 .option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
 }
 .option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 9rpx;
  text-align: center;
 }









.picker{
    width: 160px;
    height: 40px;
    border: 1px solid #cccccc;
    background: #f7f7f7;
    border-radius: 5px;
    line-height: 40px;
    text-align: center;
    align-items: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #333333;
    padding-left: 10rpx;
    padding-right: 10rpx;
}
.select_imgs{
  width: 40rpx;
  height: 40rpx;
  float: right;
  /* display: inline-block; */
  transition: transform 0.3s;
  margin-top: 20rpx;
 }
 .select_imgs_rotate{
  transform:rotate(180deg); 
 }