  background-color: #fff;
  font-size: 26rpx;
}
.orange{
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  color: #1074E3;
  background-color: #fff;
  font-size: 26rpx;
  border-bottom:  5rpx solid #1074E3;
}
.show{
  display: block;
}
.hidden{
  display: none;
}
